# Configuration file for Virtual Try-On E-Commerce
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env file to version control!

# ==================== DATABASE CONFIGURATION ====================
# MySQL Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=virtual_tryon_db
DB_USER=root
DB_PASSWORD=your_password_here

# ==================== FLASK CONFIGURATION ====================
# Flask Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a secure key: python -c "import os; print(os.urandom(24).hex())"
FLASK_SECRET_KEY=change_this_to_a_random_secret_key_in_production

# Flask Server Settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# ==================== WEBSOCKET CONFIGURATION ====================
# WebSocket Server Settings
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8765

# ==================== GPU SERVER CONFIGURATION ====================
# GPU Server for Virtual Try-On Processing
GPU_SERVER_IP=172.28.80.80
GPU_SERVER_PORT=9999

# ==================== SESSION CONFIGURATION ====================
# Session Lifetime (in days)
SESSION_LIFETIME_DAYS=7

# ==================== APPLICATION SETTINGS ====================
APP_NAME=Virtual Try-On E-Commerce
MAX_CART_ITEMS=20
FREE_SHIPPING_THRESHOLD=50.00
SHIPPING_COST=5.00
